<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="4dp"
    android:layout_marginBottom="4dp"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/artikelContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="4dp">

        <ImageView
            android:id="@+id/icon_Itemtag"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="2dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/ic_itemtag"/>

        <TextView
            android:id="@+id/label_artikelNr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Artikel Nr"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/guide_verticalMid"
            app:layout_constraintStart_toEndOf="@+id/icon_Itemtag"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text_artikelNr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/label_artikelNr"
            android:layout_toEndOf="@id/icon_Itemtag"
            android:text="Line 2"
            android:textSize="15sp"
            app:layout_constraintEnd_toStartOf="@+id/guide_verticalMid"
            app:layout_constraintStart_toEndOf="@+id/icon_Itemtag"
            app:layout_constraintTop_toBottomOf="@+id/label_artikelNr" />

        <!-- <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Line 1"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@id/testimage"
            android:id="@+id/example_text1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Line 2"
            android:textSize="15sp"
            android:layout_below="@id/example_text1"
            android:layout_toEndOf="@id/testimage"
            android:layout_marginStart="8dp"
            android:id="@+id/example_text2"/>-->

        <TextView
            android:id="@+id/label_artikelBez"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@id/label_artikelNr"
            android:text="Artikel Kurzbezeichnung"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/icon_locationMarker"
            app:layout_constraintStart_toStartOf="@+id/guide_verticalMid"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text_artikelBez"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/label_artikelBez"
            android:layout_alignStart="@id/label_artikelBez"
            android:layout_toEndOf="@id/icon_Itemtag"
            android:text="Line 2"
            android:textSize="15sp"
            app:layout_constraintEnd_toStartOf="@+id/icon_locationMarker"
            app:layout_constraintStart_toStartOf="@+id/guide_verticalMid"
            app:layout_constraintTop_toBottomOf="@+id/label_artikelBez" />


        <!--FARBEN -->
        <ImageView
            android:id="@+id/icon_colorPalette"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="4dp"
            android:padding="2dp"
            android:src="@drawable/ic_color"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/icon_Itemtag" />

        <TextView
            android:id="@+id/label_farbID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_artikelNr"
            android:layout_toEndOf="@id/icon_colorPalette"
            android:text="Farb ID"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/guide_verticalMid"
            app:layout_constraintStart_toEndOf="@+id/icon_colorPalette"
            app:layout_constraintTop_toTopOf="@+id/icon_colorPalette" />

        <TextView
            android:id="@+id/text_farbID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/label_farbID"
            android:layout_toEndOf="@id/icon_Itemtag"
            android:text="Line 2"
            android:textSize="15sp"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="@+id/label_farbID"
            app:layout_constraintTop_toBottomOf="@+id/label_farbID" />


        <TextView
            android:id="@+id/label_farbBez"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_artikelNr"
            android:layout_toEndOf="@id/icon_colorPalette"
            android:text="Farbbezeichnung"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBaseline_toBaselineOf="@id/label_farbID"
            app:layout_constraintEnd_toStartOf="@+id/icon_locationMarker"
            app:layout_constraintStart_toStartOf="@+id/guide_verticalMid" />
        <TextView
            android:id="@+id/text_farbBez"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/icon_Itemtag"
            android:text="Line 2"
            android:textSize="15sp"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="@+id/label_farbBez"
            app:layout_constraintTop_toBottomOf="@+id/label_farbBez" />

                <!--Menge-->
        <TextView
            android:id="@+id/label_menge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Menge"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBaseline_toBaselineOf="@id/label_groesse"
            app:layout_constraintEnd_toStartOf="@+id/divider_menge_groesse"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/text_menge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Line 2"
            android:textSize="15sp"
            app:layout_constraintEnd_toStartOf="@+id/text_mengenEinheit"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/label_menge" />

        <TextView
            android:id="@+id/text_mengenEinheit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="Line 2"
            android:textSize="15sp"
            app:layout_constraintBaseline_toBaselineOf="@id/text_menge"
            app:layout_constraintEnd_toStartOf="@+id/divider_menge_groesse"
            app:layout_constraintStart_toEndOf="@+id/text_menge" />

       <!--groesse-->


        <TextView
            android:id="@+id/label_groesse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Größe"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/divider_groesse_fertzu"
            app:layout_constraintStart_toEndOf="@+id/divider_menge_groesse"
            app:layout_constraintTop_toBottomOf="@+id/text_farbBez" />
        <TextView
            android:id="@+id/text_groesse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Line 2"
            android:textSize="15sp"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="@+id/label_groesse"
            app:layout_constraintTop_toBottomOf="@+id/label_groesse" />

        <!--Fertigungsazustand-->
        <TextView
            android:id="@+id/label_fertigungszustand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fertigungszustand"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBaseline_toBaselineOf="@id/label_groesse"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/divider_groesse_fertzu" />
        <TextView
            android:id="@+id/text_fertigungszustand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Line 2"
            android:textSize="15sp"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="@+id/label_fertigungszustand"
            app:layout_constraintTop_toBottomOf="@+id/label_fertigungszustand" />

        <ImageView
            android:id="@+id/icon_locationMarker"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:padding="2dp"
            app:layout_constraintBottom_toTopOf="@+id/divider_farbe_misc"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_location" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guide_verticalMid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="99dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintGuide_begin="478dp"
            app:layout_constraintGuide_percent="0.5"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/divider_farbe_misc"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/divider_artikel_farbe" />

        <View
            android:id="@+id/divider_artikel_farbe"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintBottom_toTopOf="@+id/divider_farbe_misc"
            app:layout_constraintEnd_toStartOf="@+id/icon_locationMarker"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="spread" />

        <View
            android:id="@+id/divider_groesse_fertzu"
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:layout_margin="1dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/divider_menge_groesse"
            app:layout_constraintTop_toBottomOf="@+id/divider_farbe_misc" />

        <View
            android:id="@+id/divider_menge_groesse"
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:layout_margin="1dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/divider_groesse_fertzu"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/divider_farbe_misc"
            app:layout_constraintVertical_bias="0.0" />


    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.cardview.widget.CardView>