<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/filterFragment_icon_article"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:adjustViewBounds="true"
                android:contentDescription="@string/filterFragment_iconDescription_article"
                android:padding="18dp"
                android:scaleType="fitEnd"
                android:translationY="-40dp"
                app:srcCompat="@drawable/ic_itemtag"
                tools:ignore="NestedWeights" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:translationY="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_regular"
                    android:text="@string/filterFragment_textView_articleId"
                    android:textColor="@android:color/black"
                    android:textSize="24sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_regular"
                    android:text="@string/filterFragment_textView_articleShortDescription"
                    android:textColor="@android:color/black"
                    android:textSize="24sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/filterFragment_textView_contains"
                    android:textSize="14sp"
                    android:translationY="-10dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_regular"
                    android:text="@string/filterFragment_textView_pieceId"
                    android:textColor="@android:color/black"
                    android:textSize="24sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_regular"
                    android:text="@string/filterFragment_textView_pieceDivision"
                    android:textColor="@android:color/black"
                    android:textSize="24sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/filterFragment_editText_articleId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="@string/filterFragment_editText_articleId"
                    android:imeOptions="actionSearch"
                    android:importantForAutofill="no"
                    android:inputType="number"
                    android:textCursorDrawable="@null" />

                <EditText
                    android:id="@+id/filterFragment_editText_articleShortDesc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="@string/filterFragment_editText_articleShortDescription"
                    android:imeOptions="actionSearch"
                    android:importantForAutofill="no"
                    android:inputType="text"
                    android:textCursorDrawable="@null" />

                <EditText
                    android:id="@+id/filterFragment_editText_pieceId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="@string/filterFragment_editText_pieceId"
                    android:imeOptions="actionSearch"
                    android:importantForAutofill="no"
                    android:inputType="number"
                    android:textCursorDrawable="@null"
                    android:translationY="14sp" />

                <EditText
                    android:id="@+id/filterFragment_editText_pieceDivision"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="@string/filterFragment_editText_pieceDivision"
                    android:imeOptions="actionSearch"
                    android:importantForAutofill="no"
                    android:inputType="number"
                    android:textCursorDrawable="@null"
                    android:translationY="14sp" />
            </LinearLayout>

        </LinearLayout>

        <View
            android:id="@+id/filterFragment_divider__article_color"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:minHeight="180dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/filterFragment_icon_color"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:adjustViewBounds="true"
                android:contentDescription="@string/filterFragment_iconDescription_color"
                android:padding="18dp"
                android:scaleType="fitEnd"
                app:srcCompat="@drawable/ic_color"
                tools:ignore="NestedWeights" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_regular"
                    android:text="@string/filterFragment_textView_colorId"
                    android:textColor="@android:color/black"
                    android:textSize="24sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_regular"
                    android:text="@string/filterFragment_textView_colorDescription"
                    android:textColor="@android:color/black"
                    android:textSize="24sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/filterFragment_editText_colorId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="@string/filterFragment_editText_colorId"
                    android:imeOptions="actionSearch"
                    android:importantForAutofill="no"
                    android:inputType="number"
                    android:textCursorDrawable="@null" />

                <EditText
                    android:id="@+id/filterFragment_editText_colorDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="@string/filterFragment_editText_colorDescription"
                    android:imeOptions="actionSearch"
                    android:importantForAutofill="no"
                    android:inputType="text"
                    android:textCursorDrawable="@null" />

            </LinearLayout>
        </LinearLayout>

        <View
            android:id="@+id/filterFragment_divider__color_misc"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:minHeight="180dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/filterFragment_icon_misc"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:adjustViewBounds="true"
                android:contentDescription="@string/filterFragment_iconDescription_misc"
                android:padding="18dp"
                android:scaleType="fitEnd"
                app:srcCompat="@drawable/ic_misc"
                tools:ignore="NestedWeights" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_regular"
                    android:text="@string/filterFragment_textView_size"
                    android:textColor="@android:color/black"
                    android:textSize="24sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_regular"
                    android:text="@string/filterFragment_textView_manufacturingState"
                    android:textColor="@android:color/black"
                    android:textSize="24sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/filterFragment_editText_size"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="@string/filterFragment_editText_size"
                    android:imeOptions="actionSearch"
                    android:importantForAutofill="no"
                    android:inputType="number"
                    android:textCursorDrawable="@null" />

                <EditText
                    android:id="@+id/filterFragment_editText_manufacturingState"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="@string/filterFragment_editText_manufacturingState"
                    android:imeOptions="actionSearch"
                    android:importantForAutofill="no"
                    android:inputType="text"
                    android:textCursorDrawable="@null" />
            </LinearLayout>

        </LinearLayout>


        <Button
            android:id="@+id/filterFragment_button_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/filterFragment_submitButton" />
    </LinearLayout>
</ScrollView>